<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableScreenController">
   <children>
      <Label alignment="CENTER" layoutX="135.0" layoutY="27.0" prefHeight="53.0" prefWidth="330.0" text="All Notices in System">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <Button fx:id="addNoticeButton" layoutX="109.0" layoutY="323.0" mnemonicParsing="false" onAction="#addNoticeButtonClicked" prefHeight="32.0" prefWidth="118.0" text="Add Notice" />
      <Button fx:id="deleteButton" layoutX="377.0" layoutY="323.0" mnemonicParsing="false" onAction="#deleteButtonClicked" prefHeight="32.0" prefWidth="118.0" text="Delete Notice" />
      <Button fx:id="checkNoticeButton" layoutX="241.0" layoutY="323.0" mnemonicParsing="false" onAction="#checkNoticeButtonClicked" prefHeight="32.0" prefWidth="118.0" text="Check Notice" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="86.0" layoutY="292.0" prefHeight="23.0" prefWidth="439.0" textFill="#e10707">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="leaveButton" layoutX="501.0" layoutY="355.0" mnemonicParsing="false" onAction="#leaveButtonClicked" prefHeight="25.0" prefWidth="85.0" text="Leave" />
      <TextArea fx:id="descriptionTextArea" editable="false" layoutX="37.0" layoutY="97.0" prefHeight="195.0" prefWidth="525.0" />
      <TableView fx:id="noticesTable" layoutX="100.0" layoutY="80.0" prefHeight="207.0" prefWidth="395.0">
        <columns>
          <TableColumn fx:id="titleColumn" editable="false" prefWidth="271.0" sortable="false" text="Title" />
          <TableColumn fx:id="authorColumn" editable="false" prefWidth="123.0" sortable="false" text="Author" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
